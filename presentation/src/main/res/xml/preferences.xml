<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Внешний вид">
        <ListPreference
            android:defaultValue="@string/setting_theme_values_system"
            android:entries="@array/setting_theme_title"
            android:entryValues="@array/setting_theme_values"
            android:key="@string/preference_key_theme"
            android:title="Тема" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Уведомления">
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="notification_repeat"
            android:title="Повторение" />
    </PreferenceCategory>


</PreferenceScreen>