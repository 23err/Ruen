<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ruen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2E849A</item>
        <item name="colorPrimaryVariant">#3F94B6</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#216962</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="backgroundPanelColor">@color/blue_100</item>
    </style>

    <style name="Widget.AppCompat.TextView.TranslateTextView">
        <item name="android:layout_marginTop">@dimen/translate_view_margin_top</item>
        <item name="android:textSize">@dimen/translate_view_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Choice.MyChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="KnowButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/blue_500</item>
    </style>

    <style name="ToolBar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>