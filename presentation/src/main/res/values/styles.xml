<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.AppCompat.TextView.TranslateTextView">
        <item name="android:layout_marginTop">@dimen/translate_view_margin_top</item>
        <item name="android:textSize">@dimen/translate_view_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="KnowButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/blue_500</item>
    </style>

    <style name="ToolBar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="NewCardBottomSheetModal" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>